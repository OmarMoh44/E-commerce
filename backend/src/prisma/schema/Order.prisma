enum OrderStatus {
    PENDING
    CONFIRMED
    PROCESSING
    SHIPPED
    DELIVERED
    CANCELLED
    RETURNED
}

model Order {
    id           Int         @id @default(autoincrement())
    user         User        @relation(fields: [user_id], references: [id])
    user_id      Int
    address      Address     @relation(fields: [address_id], references: [id])
    address_id   Int
    status       OrderStatus
    order_date   DateTime    @default(now())
    total_amount Float

    payment Payment?
    items   OrderItem[]
}
